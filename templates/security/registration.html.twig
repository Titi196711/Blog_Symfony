{% extends 'base.html.twig' %}

{% block body %}

    <h1>Inscription sur le site</h1>
    {{ form_start(form) }}
    {#    {{ form_widget(form) }}#}
    {{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Votre nom...'}}) }}
    {{ form_row(form.email, {'label': 'Adresse Email', 'attr': {'placeholder': 'Adresse email...'}}) }}
    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Votre mot de passe...'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmez mot de passe', 'attr': {'placeholder': 'Confirmer votre mot de passe...'}}) }}
    <button type="submit" class="btn btn-success">Inscription !</button>
    {{ form_end(form) }}


{% endblock %}
